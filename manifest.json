{
  "name": "worthit",
  "version": "1.0.0",
  "description": "no overconsumption pls",
  "manifest_version": 3,
  "author": "PixelPaw",
  "action": {
    "default_popup": "index.html",
    "default_title": "worthit"
  },
  "permissions": ["activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.jpg"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.amazon.ca/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
